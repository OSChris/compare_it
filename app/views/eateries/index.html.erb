<h1>All of the Eateries!</h1>
<div class="row">
  <% @eateries.each do |eatery| %>
    <div class="well col-md-8">
      <div class="row">
        <div class="col-md-6">
          <h2><%= link_to eatery.name, eatery %></h2>
        </div>
        <div class="col-md-3 pull-right">
          <h3>Reviews: <%= eatery.reviews.count%></h3>
          <small><strong>Score: <%= '%.2f' % (eatery.total_average) %></strong></small>
        </div>
      </div>
      <small class="address"><%= eatery.address %></small>
      <p><%= eatery.description %></p>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="page_info">
    <%= page_entries_info @eateries %>
  </div>
  <div class="col-md-12">
    <%= will_paginate @eateries %>
  </div>
</div>

<h3>Import a CSV File</h3>
  <%= form_tag import_eateries_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>