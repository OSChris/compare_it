<!DOCTYPE html>
<html>
<head>
  <title>Citk</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class="Site">

  
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to "Compare it to Kent's", root_path, class: "navbar-brand" %>
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
      </div>
      <div class = "navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Eatery Index", eateries_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="max-height: 50px; padding-top: 8px;"><%= image_tag current_user.profile.avatar.url(:tiny), style: "display: inline-block; border: 2px solid grey;" %> <%= current_user.full_name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "My Profile", profile_path(current_user.profile) %></li>
                <li class="divider"></li>
                <li><%= link_to "Account Settings", edit_user_registration_path(current_user) %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <main class="Site-content">
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </main>

  <footer>
    
  </footer>

</body>
</html>
