<div class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Compare it to Kent's", root_path, class: "navbar-brand" %>
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
    </div>
    <div class = "navbar-collapse collapse" id="navbar-main">
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <%= form_tag eateries_path, method: :get do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search by name or address", class:  "form-control" %>
        </div>
            <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
          <% end %>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" style="max-height: 50px; padding-top: 8px;">
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url(:tiny), 
                style: "display: inline-block; max-height: 35px;" %> 
              <% else %>
                <img src="https://s3.amazonaws.com/compare-to-kents/profiles/avatars/missing.png" 
                alt="Missing Avatar" style="display: inline-block; border: 2px solid black; max-height: 35px;" />
              <% end %>
              <%= current_user.full_name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "My Profile", profile_path(current_user.profile) %></li>
              <li class="divider"></li>
              <li><%= link_to "Account Settings", edit_user_registration_path(current_user) %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <li><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></li>
          <li><%= link_to "Sign in with Google+", user_omniauth_authorize_path(:google_oauth2) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>